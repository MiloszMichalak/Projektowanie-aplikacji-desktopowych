<Window x:Class="PierwszaAplikacja.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PierwszaAplikacja"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Image Width = "120" Height = "150"></Image>
            <StackPanel Orientation="Vertical" VerticalAlignment="Center">
                <Label Content="L1" Width = "120" Height = "30"></Label>
                <Label Content="L2" Width = "120" Height = "30"></Label>
            </StackPanel>
        </StackPanel>

        

        <StackPanel Grid.Row="0" Orientation="Vertical" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel.Resources>
                <Style TargetType="{x:Type Button}">
                    <Setter Property="Margin" Value="5,5,5,5"></Setter>
                </Style>
            </StackPanel.Resources>

            <Button Width = "120" Height = "30" Content="B1"></Button>
            <Button Width = "120" Height = "30" Content="B2"></Button>
            <Button Width = "120" Height = "30" Content="B3"></Button>
        </StackPanel>

        <StackPanel Grid.ColumnSpan="2" Grid.Row="1" Orientation="Vertical" HorizontalAlignment="Center">
            <StackPanel Orientation="Horizontal">
                <Label Content="L1" Width = "120" Height = "30"></Label>
                <TextBox Width = "120" Height = "30"></TextBox>
            </StackPanel>
            <Button Width = "120" Height = "30" Content="B1"></Button>
        </StackPanel>


    </Grid>


</Window>
