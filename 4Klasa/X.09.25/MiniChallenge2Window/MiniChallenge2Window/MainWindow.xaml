<Window x:Class="MiniChallenge2Window.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MiniChallenge2Window"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        
        <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Vertical">
            <StackPanel.Resources>
                <Style TargetType="Button">
                    <Setter Property="Margin" Value="10,5,10,5"></Setter>
                    <Setter Property="Width" Value="200"></Setter>
                    <Setter Property="Height" Value="30"></Setter>
                </Style>
            </StackPanel.Resources>
            <Button Content="Dodaj operacje dodawania"></Button>
            <Button Content="Dodaj operacje odejmowania"></Button>
            <Button Content="Dodaj operacje mnożenia"></Button>
            <Button Content="Dodaj operacje dzielenia"></Button>
        </StackPanel>
        
        <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Vertical" Margin="0,0,0,20">
            <Label Content="Lista operacji:"></Label>
            <TextBox Height="125" Width="540"></TextBox>
            <StackPanel Orientation="Horizontal">
                <Label Content="Zmienna modyfikujaca"></Label>
                <TextBox Width="50"></TextBox>
            </StackPanel>
            <Button Content="Wykonaj"></Button>
        </StackPanel>
        
        <StackPanel Grid.Row="1" Grid.ColumnSpan="1" Orientation="Vertical">
            <StackPanel.Resources>
                <Style TargetType="Label">
                    <Setter Property="FontSize" Value="25"></Setter>
                </Style>
            </StackPanel.Resources>
            <Label Content="Wynik"></Label>
            <Label Content="Wynik:"></Label>
        </StackPanel>
    </Grid>
</Window>
