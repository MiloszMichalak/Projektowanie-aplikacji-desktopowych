<Window x:Class="KoloryAplikacja.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KoloryAplikacja"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center">
            <StackPanel.Resources>
                <Style TargetType="RadioButton">
                    <Setter Property="FontSize" Value="25"></Setter>
                    <Setter Property="VerticalContentAlignment" Value="Center"></Setter>
                    <Setter Property="Margin" Value="60"></Setter>
                </Style>
            </StackPanel.Resources>
            <RadioButton GroupName="colors" x:Name="RedRadio" Content="Red" Checked="RedRadio_OnChecked"></RadioButton>
            <RadioButton GroupName="colors" x:Name="GreenRadio" Content="Green" Checked="RedRadio_OnChecked"></RadioButton>
            <RadioButton GroupName="colors" x:Name="BlueRadio" Content="Blue" Checked="RedRadio_OnChecked"></RadioButton>
        </StackPanel>
        
        <Border x:Name="Frame" Grid.Row="1" BorderThickness="5" BorderBrush="BlueViolet">
            <Label Content="temp" Background="Black" Width="100" Height="100" Foreground="AliceBlue"></Label>
        </Border>
        
        <ListView x:Name="List" Grid.Row="2"></ListView>
    </Grid>
</Window>
