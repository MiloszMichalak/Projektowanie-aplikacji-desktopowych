<Window x:Class="ZadanieWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZadanieWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="7*"></RowDefinition>
            <RowDefinition Height="2*"></RowDefinition>
        </Grid.RowDefinitions>
        
        <Label Grid.Row="0" Content="WPF APP" FontSize="32" HorizontalAlignment="Center"></Label>
        <GroupBox Grid.Row="1" Header="GroupBox">
            <Grid >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"></ColumnDefinition>
                    <ColumnDefinition Width="5*"></ColumnDefinition>
                    <ColumnDefinition Width="1*"></ColumnDefinition>
                    <ColumnDefinition Width="1*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                
                <Grid.Resources>
                    <Style TargetType="TextBox">
                        <Setter Property="Height" Value="35"></Setter>
                    </Style>
                    <Style TargetType="Label">
                        <Setter Property="FontSize" Value="24"></Setter>
                        <Setter Property="VerticalAlignment" Value="Center"></Setter>
                    </Style>
                </Grid.Resources>
                
                <Label Grid.Row="0" Grid.Column="0" Content="Name"></Label>
                <Label Grid.Row="1" Grid.Column="0" Content="Street Address"></Label>
                <Label Grid.Row="2" Grid.Column="0" Content="City"></Label>
                <Label Grid.Row="3" Grid.Column="0" Content="Zip"></Label>
                
                <TextBox Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="3"></TextBox>
                <TextBox Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="3"></TextBox>
                
                <Label Grid.Row="2" Grid.Column="2" Content="State" Margin="10,0,0,0"></Label>
                <TextBox Grid.Row="2" Grid.Column="3"></TextBox>
                
                <TextBox Grid.Row="2" Grid.Column="1"></TextBox>
                <TextBox Grid.Row="3" Grid.Column="1"></TextBox>
            </Grid>
        </GroupBox>
        <StackPanel Grid.Row="2" Orientation="Horizontal">
            <StackPanel.Resources>
                <Style TargetType="Button">
                    <Setter Property="Width" Value="120"></Setter>
                    <Setter Property="Height" Value="35"></Setter>
                    <Setter Property="Margin" Value="8"></Setter>
                </Style>
            </StackPanel.Resources>
            <Button Content="BTN1"></Button>
            <Button Content="BTN1"></Button>
        </StackPanel>
        
    </Grid>
    
    
    
</Window>
