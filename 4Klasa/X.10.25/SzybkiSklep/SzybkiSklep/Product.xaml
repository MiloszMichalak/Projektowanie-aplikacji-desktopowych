<Window x:Class="SzybkiSklep.Product"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:SzybkiSklep"
        mc:Ignorable="d"
        Title="ProductItem" Height="150" Width="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"></ColumnDefinition>
            <ColumnDefinition Width="8*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        
        <Grid.Resources>
            <Style TargetType="TextBox">
                <Setter Property="Height" Value="30"></Setter>
                <Setter Property="Width" Value="200"></Setter>
            </Style>
            <Style TargetType="Label">
                <Setter Property="VerticalAlignment" Value="Center"></Setter>
            </Style>
        </Grid.Resources>
        
        <Label Grid.Row="0" Grid.Column="0" Content="Name"></Label>
        <TextBox x:Name="name" Grid.Row="0" Grid.Column="1"></TextBox>
        <Label Grid.Row="1" Grid.Column="0" Content="Cena"></Label>
        <TextBox x:Name="price" Grid.Row="1" Grid.Column="1"></TextBox>
        <Button Grid.Row="2" Grid.Column="0" Content="Dodaj"></Button>
    </Grid>
</Window>
