<Window x:Class="FirstChallenge.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FirstChallenge"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="500">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"></ColumnDefinition>
            <ColumnDefinition Width="2*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        
        <StackPanel Grid.Column="0" Orientation="Vertical">
            <StackPanel.Resources>
                <Style TargetType="Label">
                    <Setter Property="Margin" Value="0,1,0,1"></Setter>
                </Style>
            </StackPanel.Resources>
            <Label Content="Enter your IP:"></Label>
            <Label Content="Port:"></Label>
            <Label Content="Number of Packets Sent:"></Label>
            <Label Content="Packet Contenet:"></Label>
        </StackPanel>
        
        <StackPanel Grid.Column="1" Orientation="Vertical" Margin="0,5,10,0">
            
            <DockPanel LastChildFill="False" Margin="0,0,0,5">
                <TextBox Width="90" DockPanel.Dock="Left"/>
                <Button Content="Send Packet" DockPanel.Dock="Right" Background="CornflowerBlue" Margin="0,0,15,0"/>
            </DockPanel>
            
            <StackPanel Orientation="Vertical"  HorizontalAlignment="Left">
                <StackPanel.Resources>
                    <Style TargetType="TextBox">
                        <Setter Property="Margin" Value="0,5,0,5"></Setter>
                        <Setter Property="Width" Value="40"></Setter>
                    </Style>
                </StackPanel.Resources>
                <TextBox/>
                <TextBox/>
            </StackPanel>
            
            <ListView VerticalAlignment="Stretch" Height="200" Margin="0,5,0,0"/>
        </StackPanel>
    </Grid>
</Window>
